unit Unit7;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, IdCoder, IdCoder3to4, IdCoder00E,
  IdCoderXXE, IdBaseComponent, Vcl.StdCtrls;

type
  TForm7 = class(TForm)
    GroupBox1: TGroupBox;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    GroupBox2: TGroupBox;
    Label4: TLabel;
    Label6: TLabel;
    Edit4: TEdit;
    Edit6: TEdit;
    Button1: TButton;
    Button2: TButton;
    IdEncoderXXE1: TIdEncoderXXE;
    IdDecoderXXE1: TIdDecoderXXE;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form7: TForm7;

implementation

{$R *.dfm}

procedure TForm7.Button1Click(Sender: TObject);
var
HDD_id, email, dec_key, enc_key : String;
begin
  dec_key:=HDD_id+'+'+email;
  enc_key:=IdEncoderXXE1.Encode(IdEncoderXXE1.Encode(dec_key));
  Edit3.Text:=enc_key;
end;

procedure TForm7.Button2Click(Sender: TObject);
var
dec_key, enc_key : String;
begin
  enc_key:=Edit6.Text;
  dec_key:=IdDecoderXXE1.DecodeString(IdDecoderXXE1.DecodeString(enc_key));
  Edit4.Text:=dec_key;
end;

end.
